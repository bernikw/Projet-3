</div>

<!--Contact form -->
<section id="contact-form">
	<div class="container">
		<div class="row">
			<h5 class="text-center text-uppercase text-secondary mb-0 my-5">Me contacter</h5>
			<hr class="star-dark mb-5">
			<div class="row">
				<div class="col-lg-8 mx-auto">
					<form method="POST">

						<div class="mb-3">
							<label for="exampleFormControlInput1" class="form-label">Votre prénom</label>
							<input type="text" class="form-control" name="firstname" required="required" value="{{datasin.firstname}}">
						</div>

						<div class="mb-3">
							<label for="exampleFormControlInput1" class="form-label">Votre nom</label>
							<input type="text" class="form-control" name="name" required="required" value="{{datasin.name}}">
						</div>

						<div class="mb-3">
							<label for="exampleFormControlInput1" class="form-label">Votre e-mail</label>
							<input type="email" class="form-control" name="email" required="required" value="{{datasin.email}}">
						</div>

						<div class="mb-3">
							<label for="exampleFormControlInput1" class="form-label">Message</label>
							<textarea class="form-control" name="message" rows="5" required="required" value="{{datasin.message}}"></textarea>
						</div>


						<div class="d-grid gap-2 col-6 mx-auto my-5">
							<button type="submit" class="btn btn-success" type="button">Envoyer</button>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>{% endblock %}
