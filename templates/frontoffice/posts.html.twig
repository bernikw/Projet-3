{% extends "/frontoffice/layout.html.twig" %}


{% block content %}

		<section class="blog">
			<div class="container">
				<div class="row">
					{% for post in posts %}
						<div class="col-sm-4">
							<div class="card" >
								<div class="card-body">
									<h5 class="card-title">{{ post.title }}</h5>
									<p class="card-text">{{ post.text}}</p>
									<a href="index.php?action=post&id={{ post.id}}" class="btn btn-primary">Lire le post</a>
								</div>
							</div>
						</div>

					{% endfor %}


					<nav aria-label="Page navigation example">
						<ul class="pagination">
							<li class="page-item">
								<a class="page-link" href="#">Previous</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">1</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">2</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">3</a>
							</li>
							<li class="page-item">
								<a class="page-link" href="#">Next</a>
							</li>
						</ul>
					</nav>
				</div>
			</div>
		</section>

{% endblock %}
