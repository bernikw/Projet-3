{% extends "/frontoffice/layout.html.twig" %}

{% block content %}

	<!--Header section -->
	<div class="container">
		<div class="row">
			<div class="p-4 p-md-5 mb-4 text-white rounded bg-secondary my-5">
				<div class="col-md-8 px-0">
					<h1 class="display-4">{{ post.title }}</h1>
				</div>
			</div>
		</div>
	</div>

	<!--Content section -->
	<div class="container">
		<div class="row">

			<p>
				Date de cr√©ation:
				{{ post.dateCreation|date("d/m/Y") }}
				Date de modification:
				{{ post.dateUpdate|date("d/m/Y") }}
				par
				{{ post.pseudo }}
			</p>

			<p class='lead'>{{ post.chapo }}</p>
			<p>{{ post.text }}</p>

		</div>
	</div>
	<!--Comments section -->
	<div class="container">
		<div class="row py-5">
			<h5 class="text-center text-uppercase text-secondary mb-0 my-5">Commentaires</h5>
			<hr class="star-dark mb-5">
			<div class="container my-3 py-3">
				<div class="row d-flex justify-content-center">
					<div class="col-md-12 col-lg-10 col-xl-8">
						<div class="card">
							{% if comments %}
								{% for comment in comments %}
									<div class="card-body">
										<div class="d-flex flex-start align-items-center">
											<div>
												<h6 class="fw-bold text-success mb-1">{{ comment.pseudo }}</h6>
												<p class="text-muted small mb-0">
													{{comment.dateComment|date("d/m/Y")}}
												</p>
											</div>
										</div>
										<p class="mt-3 mb-4 pb-2">
											{{ comment.text }}
										</p>
									</div>
								{% endfor %}
							{% endif %}

							{% if session.user is defined %}
								<h1>{{ session.user.role }}</h1>
								<div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
									<div class="d-flex flex-start w-100">
										<div class="form-outline w-100">
											<label class="form-label">Ajouter un commentaire</label>
											<textarea class="form-control" id="textAreaExample" rows="4" col="6" style="background: #fff;"></textarea>
										</div>
									</div>
									<div class="float-end mt-2 pt-1">
										<button type="button" class="btn btn-success btn-sm">Soumettre</button>
									</div>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
