<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="Créez votre premier blog en PHP">
		<title>Blog PHP</title>
		<!-- Bootstrap CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<link
		rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
		<!--Custom styles for this template-->
		<link href="css/style.css" rel="stylesheet">

		<link rel="icon" type="image" href="images/favicon.png"/>

	</head>

	<body>
		<!--Navigation-->
		<nav class="navbar navbar-expand-md navbar-dark bg-primary">
			<div class="container-fluid">
				<a class="navbar-brand" href="#">{ $this }</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarsmain" aria-controls="navbarsExample02" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarsmain">
					<ul class="navbar-nav me-auto">
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href="http://localhost:8000/#">Accueil</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="http://localhost:8000/?action=article">Article</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="http://localhost:8000/?action=comment">Commentaire</a>
						</li>
						<li class="nav-item">
							<a class="nav-link" href="http://localhost:8000/?action=user">Utilisateur</a>
						</li>
					</ul>
					<div class="text-end">
						{% if session.user is not defined %}
							<a href="http://localhost:8000/#" role="button" class="btn btn-outline-light me-2">Retour</a>

						{% endif %}

						{% if session.user is defined %}
							<h1>{{ session.user.role }}</h1>
							<a href="http://localhost:8000/?action=logout" role="button" class="btn btn-outline-light me-2">Se déconnecter</a>
						{% endif %}
					</div>
				</div>
			</div>
		</nav>
		{% for type, messages in flashes %}
			{% for message in messages %}
				<div class="alert alert-warning" role="alert">
					<p class={{ type }}>
						{{ message }}
					</p>
				</div>
			{% endfor %}
			{% for type, messages in flashes %}
				<div class="alert alert-success" role="alert">
					<p class={{ types }}>
						{{ message }}
					</p>
				</div>
			{% endfor %}
			{% for type, messages in flashes %}
				<div class="alert alert-danger" role="alert">
					<p class={{type }}>
						{{ message }}
					</p>
				</div>
			{% endfor %}
			{% endfor %}


		{% block content %}{% endblock %}

		<footer class="bg-primary text-center text-white">
			<div class="container">
				<div class="row">
					<div class="footer-col col-md-1"></div>
					<div
						class="footer-col col-md-10">
						<!-- Section: Social media -->
						<section
							class="mb-4 pt-3">
							<!-- Linkedin -->
							<a class="btn btn-outline-light btn-floating m-1" href="https://www.linkedin.com/in/bernadetta-kwa%C5%9Bniak-sib%C3%A9-b07a5954/" target="_blank" role="button">
								<i class="bi bi-linkedin"></i>
							</a>
							<!-- Github -->
							<a class="btn btn-outline-light btn-floating m-1" href="https://github.com/" target="_blank" role="button">
								<i class="bi bi-github"></i>
							</a>
						</section>

						<section class="mb-4">
							<p>
								"Parler est bon marché. Montrez-moi le code." - Linus Torvalds
							</p>
						</section>
					</div>
					<div class="footer-col col-md-1">
						<section class="mb-4 pt-3">
							<h6 class="text-uppercase text-center mb-4">Admin</h6>
							{% if session.user is defined %}
								<h1>{{ session.user.role }}</h1>
								<a href="http://localhost:8000/?action=logout" class="btn btn-secondary" role="button">Déconnection</a>
							{% endif %}
						</div>
					</section>
				</div>
			</div>
		</div>
		<!-- Copyright -->
		<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
			© 2021 Copyright Bernadetta Sibe
		</div>
	</body>
</html></footer><script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script><script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script></body></html>
