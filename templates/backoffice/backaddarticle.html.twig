{% extends "/backoffice/layout.html.twig" %}

{% block content %}

	<!--Header section -->
	<header>
		<div class="container">
			<div class="row">
				<div class="p-4 p-md-3 mb-4 text-center text-white rounded bg-primary my-3">
					<div class="col-md-12 px-0">
						<h1 class="display-4">Ajouter article</h1>
					</div>
				</div>
			</div>
		</div>
	</header>
	<!--Add post section -->
	<section id="addpost">
		<div class="container">
			<h5 class="text-center text-uppercase text-secondary mb-0">Ajouter un article</h5>
			<hr class="star-dark mb-5">
			<div class="row">
				<div class="col-lg-8 mx-auto">
					
					<form method="POST">

						<div class="form-group floating-label-form-group controls mb-0 pb-2">
								<label>Author</label>
								<input class="form-control" id="userId" name="userId" value="{{datassaisi.userId}}" required="required">
								<p class="help-block text-danger"></p>
						</div>
					
		
							<div class="form-group floating-label-form-group controls mb-0 pb-2">
								<label>Title</label>
								<input class="form-control" id="title" name="title" value="{{datassaisi.title}}" required="required">
								<p class="help-block text-danger"></p>
							</div>
					
                        
							<div class="form-group floating-label-form-group controls mb-0 pb-2">
								<label>Chap√¥</label>
								<textarea class="form-control" id="chapo" name="chapo" value="{{datassaisi.chapo}}" rows="5" required="required"></textarea>
								<p class="help-block text-danger"></p>
							</div>
						
						
							<div class="form-group floating-label-form-group controls mb-0 pb-2">
								<label>Contenu de l'article</label>
								<textarea class="form-control" id="text" name="text" value="{{datassaisi.text}}" rows="10" required="required"></textarea>
								<p class="help-block text-danger"></p>
							</div>
										
						<div class="d-grid gap-2 col-6 mx-auto my-5">
							<button class="btn btn-primary" type="submit">Envoyer</button>
						</div>
						
					</form>
				</div>
			</div>
		</div>
	</div>
</section>{% endblock %}
