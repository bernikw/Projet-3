{% extends "/frontoffice/layout.html.twig" %}

 {% block content %}
<!--Header section -->
<header>
        <div class="container">
	        <div class="row">
				<div class="p-4 p-md-5 mb-4 text-center         text-white rounded bg-secondary my-5">
				    <div class="col-md-12 px-0">
						<h1 class="display-4">Admin Interface</h1>
					</div>
				</div>
			</div>
		</div>
</header>

<!--Edit comment section -->
    <section id="editcomment">
        <div class="container">
            <h5 class="text-center text-uppercase text-secondary mb-0">Modifier votre commentaire</h5>
            <hr class="star-dark mb-5">
                <div class="row">
                    <div class="col-lg-8 mx-auto">
                        <form action="" method="post">
                            <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label for="author">Auteur</label>
                            <input class="form-control" type="text" id="author" name="author">
                            <p class="help-block text-danger"></p>
                            </div>
                            </div>
                            <div class="control-group">
                            <div class="form-group floating-label-form-group controls mb-0 pb-2">
                            <label>Commentaire</label>
                            <textarea class="form-control" id="message" name="comment" rows="5"> </textarea>
                            <p class="help-block text-danger"></p>
                        </div>
                        </div>
                        <div id="success"></div>
                        <div class="d-grid gap-2 col-6 mx-auto my-5">
                        <button class="btn btn-success" type="button" type="submit">Modifier</button>
                    </div>
                 </form>
                </div>
            </div>
        </div>
    </div>
</section>
 {% endblock %}