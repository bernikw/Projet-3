{% extends "/frontoffice/layout.html.twig" %}

{% block content %}

	<section id="login">
		<div class="container">
		<div class="row">
			<h5 class="text-center text-uppercase text-secondary mb-0 my-5">Connectez-vous</h5>
			<hr class="star-dark mb-5">
			<div class="row">
				<div class="col-lg-8 mx-auto">
					<form method="POST">
					
						<div class="mb-3">
							<label class="form-label">Votre e-mail</label>
							<input id="email" name="email" type="email" class="form-control" required="required">
						</div>

						<div class="mb-3">
							<label class="form-label">Mot de passe</label>
							<input id="password" name="password" type="password" class="form-control" required="required">
						</div>
						<div class="d-grid gap-2 col-6 mx-auto my-5">
							<button type="submit" class="btn btn-success" value='LOGIN'>Se connecter</button>
						</div>
						<a href="http://localhost:8000/?action=registration" class="already">Pas encore inscrit ?</a>
					</form>
				</div>
			</div>
			</div>
		</div>
	</section>
{% endblock %}
