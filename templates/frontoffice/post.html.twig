{% extends "/frontoffice/layout.html.twig" %}

{% block content %}
<!--Header section -->

<div class="container my-5">
	<div class="card bg-dark text-white">
		<img src="images/article-1.jpg" class="card-img" alt="..."/>
			<div class="card-img-overlay text-center mt-5">
				<h5 class="card-title">
				<h2>{{ post.title }}</h2>
			</h5>
		</div>
	</div>
</div>
	<!--Content section -->
	<div class="container">
    <div class="row">
		<p>{{ post.published_at|date("m/d/Y") }}</p>
		<p>{{ post.text }}</p>

    </div>
	</div>
	<!--Comments section -->
	<div class="container">
		<h4>Commentaires</h4>
		{% if comments %}
			{% for comment in comments %}
				<p>id =
					{{ comment.id }}<br>
					pseudo =
					{{ comment.pseudo }}<br>
					text =
					{{ comment.text }}</p>
			{% endfor %}
		{% else %}
			<h6>Aucun commentaires</h6>
		{% endif %}
	</div>
{% endblock %}
